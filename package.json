{
  "name": "default-starter-template",
  "version": "1.0.0",
  "description": "Production-ready starter template for AI coding agents with MCP servers, modern stack, and zero-setup",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:bun": "bun run --watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "prebuild": "pnpm run clean",
    "postbuild": "pnpm run build:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run test",
    "ci": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run build",
    "clean": "rimraf dist coverage .turbo .tsbuildinfo",
    "clean:all": "pnpm run clean && rimraf node_modules .pnpm-store",
    "setup": "node scripts/setup.js",
    "prepare": "husky install || true",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:check": "pnpm audit --json | node scripts/audit-check.js",
    "deps:update": "pnpm update --latest --interactive",
    "deps:check": "pnpm outdated",
    "generate:component": "node scripts/generate-component.js",
    "docs:serve": "npx http-server docs -p 8080",
    "precommit": "lint-staged",
    "prepush": "pnpm run validate",
    "validate-build": "node scripts/validate-build.js",
    "verify-dist": "node scripts/verify-dist.js",
    "check-coverage": "node scripts/check-coverage.js",
    "copilot:validate": "pnpm run validate-build && echo \"\" && echo \"âœ… Code ready for Copilot agent\"",
    "agent:test": "pnpm run test && pnpm run check-coverage",
    "agent:build": "pnpm run validate-build && pnpm run verify-dist"
  },
  "keywords": [
    "starter-template",
    "typescript",
    "mcp",
    "ai-agents",
    "cursor",
    "copilot",
    "windsurf",
    "aider",
    "bun",
    "vitest",
    "production-ready",
    "zero-config",
    "strict-mode"
  ],
  "author": "Default Starter Template Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalsorc/Default-Starter-Template-Repository.git"
  },
  "bugs": {
    "url": "https://github.com/digitalsorc/Default-Starter-Template-Repository/issues"
  },
  "homepage": "https://github.com/digitalsorc/Default-Starter-Template-Repository#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.12",
    "@types/node": "^22.9.3",
    "@vitest/coverage-v8": "^2.1.6",
    "@vitest/ui": "^2.1.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.7.2"
    }
  }
}
