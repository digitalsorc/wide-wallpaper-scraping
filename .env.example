# Example environment variables
# Copy this file to .env and fill in your actual values
# 
# IMPORTANT: Never commit the .env file to version control!
# The .env file is in .gitignore for security.

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# ============================================================================
# MCP Server: Brave Search
# ============================================================================
# Web search capabilities using Brave Search API
# Get your free API key from: https://brave.com/search/api/
# Free tier: 2,000 queries/month
BRAVE_API_KEY=your_brave_api_key_here

# ============================================================================
# MCP Server: GitHub
# ============================================================================
# GitHub API integration for repository operations, issues, and PRs
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, read:org
GITHUB_TOKEN=ghp_your_github_personal_access_token

# ============================================================================
# MCP Server: PostgreSQL Database
# ============================================================================
# PostgreSQL connection string for production database
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# Example: postgresql://myuser:mypassword@localhost:5432/myapp
POSTGRES_URL=postgresql://user:password@localhost:5432/database_name

# ============================================================================
# MCP Server: AWS Cloud Services
# ============================================================================
# AWS credentials for S3, Lambda, DynamoDB, CloudWatch
# Get credentials from: https://console.aws.amazon.com/iam/
# Use IAM user with minimal required permissions
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=us-east-1
# Optional: Specific bucket or resource names
AWS_S3_BUCKET=my-app-bucket
AWS_LAMBDA_FUNCTION=my-function

# ============================================================================
# MCP Server: Slack Integration
# ============================================================================
# Slack workspace integration for messaging and notifications
# Create Slack app at: https://api.slack.com/apps
# Required scopes: chat:write, channels:read, users:read
SLACK_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
# Optional: Default channel for notifications
SLACK_CHANNEL=#general

# ============================================================================
# Optional: Additional Database Configurations
# ============================================================================
# MySQL Connection
MYSQL_URL=mysql://user:password@localhost:3306/database

# MongoDB Connection
MONGODB_URL=mongodb://localhost:27017/database

# Redis Connection
REDIS_URL=redis://localhost:6379

# ============================================================================
# Optional: Email Service (for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================================
# Optional: External API Keys
# ============================================================================
# OpenAI API (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# SendGrid Email Service
SENDGRID_API_KEY=SG.your-sendgrid-key

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# Optional: Analytics and Monitoring
# ============================================================================
# Google Analytics
GA_TRACKING_ID=UA-XXXXX-Y

# Sentry Error Tracking
SENTRY_DSN=https://your-dsn@sentry.io/project-id

# DataDog Monitoring
DATADOG_API_KEY=your-datadog-api-key

# ============================================================================
# Optional: Security and Authentication
# ============================================================================
# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=your-session-secret-change-in-production

# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# Optional: Feature Flags
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_DEBUG_MODE=false
ENABLE_EXPERIMENTAL_FEATURES=false

# ============================================================================
# Optional: Custom Application Settings
# ============================================================================
APP_NAME="My Application"
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
MAX_FILE_UPLOAD_SIZE=10485760

# ============================================================================
# WallpaperBot
# ============================================================================
# Unsplash API access key for official API usage (recommended)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
WALLPAPERBOT_OUTPUT_DIR=./wallpaper-library
WALLPAPERBOT_DB_PATH=./wallpaper-library/wallpaperbot.db

# ============================================================================
# Notes
# ============================================================================
# - Replace all placeholder values with your actual credentials
# - Keep this file secure and never commit it to version control
# - Use different .env files for different environments (dev, staging, prod)
# - Rotate secrets regularly for security
# - Use strong, unique values for secrets and keys
# - Consider using a secrets manager for production (AWS Secrets Manager, etc.)
