#!/usr/bin/env sh

echo "ğŸ” Running pre-commit validation..."

# Run lint-staged for staged files (allow empty commits)
pnpm exec lint-staged --allow-empty || {
  echo "âŒ Lint-staged failed. Fix errors and try again."
  exit 1
}

